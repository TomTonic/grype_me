{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "github-actions:pinDigests", "schedule:daily"],
  "dependencyDashboard": true,
  "enabledManagers": ["github-actions", "dockerfile", "gomod"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "description": "Auto-update rolling TomTonic/grype_me action (nightly rebuild around 06:53 UTC)",
      "matchManagers": ["github-actions"],
      "matchPackageNames": ["TomTonic/grype_me"],
      "schedule": ["after 07:15 and before 07:55"],
      "automerge": true,
      "automergeType": "branch",
      "platformAutomerge": true,
      "rebaseWhen": "behind-base-branch"
    },
    {
      "description": "Group routine GitHub Actions bumps",
      "matchManagers": ["github-actions"],
      "groupName": "github-actions"
    },
    {
      "description": "Pin and update Docker base images with digests",
      "matchManagers": ["dockerfile"],
      "pinDigests": true,
      "groupName": "docker-base-images"
    }
  ],
  "prConcurrentLimit": 8,
  "prHourlyLimit": 4
}
